<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeMenu.Producto"
             Title="Producto">
    <VerticalStackLayout>
        
        <Image Source="dolar.png"
            SemanticProperties.Description="Cute dot net bot waving hi to you!"
            HeightRequest="200"
            HorizontalOptions="Center"/>
        
        <Label 
            Text="Cambio Cliente"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="30"/>
        <Entry Placeholder="Precio" x:Name="preci" FontSize="20" HorizontalOptions="Center" WidthRequest="300" Margin="20"/>
        <Entry Placeholder="Dinero" x:Name="diner" FontSize="20" HorizontalOptions="Center" WidthRequest="300" Margin="20"/>
        <Entry Placeholder="Cambio" x:Name="camb" FontSize="20" HorizontalOptions="Center" WidthRequest="300" Margin="20"/>
        <Button Text="Calcular" x:Name="btnCalcular" BackgroundColor="#0E8103" TextColor="GhostWhite" CornerRadius="10" Margin="30" FontSize="20" Clicked="btnCalcular_Clicked" />
    </VerticalStackLayout>
</ContentPage>